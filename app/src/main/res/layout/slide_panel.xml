<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center|bottom"
        android:clipChildren="true"
        >

         <RelativeLayout
            android:id="@+id/name_pane"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/name_layout"
             >
            <TextView
             android:id="@+id/name_text"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Test"
             android:textSize="20sp"
                android:textColor="#FFFFFF"
             android:fontFamily="sans-serif-medium"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             >
            </TextView>
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/white_pane"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#F0F2F4">

        <LinearLayout
            android:id="@+id/buttonPane"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/timerBut"
                android:src="@drawable/timer"
                android:background="#F0F2F4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleType="centerInside"
                />
            <ImageButton
                android:id="@+id/ratingBut"
                android:src="@drawable/rating"
                android:background="#F0F2F4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:scaleType="centerInside"/>
            <ImageButton
                android:id="@+id/navBut"
                android:src="@drawable/navigate"
                android:background="#F0F2F4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:clickable="true"
                android:layout_margin="10dp"
                android:scaleType="centerInside"/>
        </LinearLayout>
        <com.example.thanyapat.parkinapplication.CustomScroll
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <TableLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="1"
                >
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/area_pic"
                        android:layout_width="fill_parent"
                        android:layout_height="250dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/test"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"/>
                    <ProgressBar
                        android:id="@+id/progress_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parking Fee"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:stretchMode="columnWidth">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="HOURS"
                            android:gravity="center_horizontal"
                            android:textColor="#888888"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp"/>
                        <TextView
                            android:id="@+id/price_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="-"
                            android:textSize="21sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="3dp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2dp"
                        android:layout_height="fill_parent"
                        android:background="#c0c0c0"
                        android:layout_marginTop="5dp"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#888888"
                            android:text="BAHT/HOUR"
                            android:gravity="center_horizontal"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="10dp" />
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#0B5D18"
                            android:text="-"
                            android:gravity="center_horizontal"
                            android:textSize="21sp"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="3dp"
                            android:lineSpacingExtra="3dp"/>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:stretchMode="columnWidth">

                    <LinearLayout
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Capacity"
                            android:textSize="25sp"
                            android:textColor="#C3971A"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/capacity"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="35sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Lots"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center_horizontal"/>
                    </LinearLayout>>
                    <LinearLayout
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="Open Hour"
                            android:textSize="25sp"
                            android:textColor="#773F9B"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="8dp"
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/time_text"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:text="-"
                            android:textSize="23sp"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:layout_marginBottom="8dp"/>
                    </LinearLayout>>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52/1d"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/static_map"
                        android:adjustViewBounds="true"
                        android:layout_width="fill_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/test"
                        android:layout_marginTop="15dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"/>
                    <ProgressBar
                        android:id="@+id/progress_static"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Privilage"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="some promotion"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Which information is incorrect"
                    android:gravity="center_horizontal"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:id="@+id/reportPane"
                    android:layout_centerHorizontal="true"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/location_report"
                        android:src="@drawable/reportloca"
                        android:background="#F0F2F4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"/>
                    <ImageButton
                        android:id="@+id/closure_report"
                        android:src="@drawable/reportclose"
                        android:background="#F0F2F4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"/>
                    <ImageButton
                        android:id="@+id/price_report"
                        android:src="@drawable/reportprice"
                        android:background="#F0F2F4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="10dp"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
                <TextView
                    android:id="@+id/review_count"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="- Reviews"
                    android:textSize="10sp"
                    android:textColor="#999999"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal|bottom"
                    />
                <TextView
                    android:id="@+id/review_avg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="43sp"
                    android:textColor="#0B5D18"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center_horizontal"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/review_amount"
                    android:gravity="center_horizontal"/>
                <LinearLayout
                    android:id="@+id/review_pane"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:background="#c0c0c0"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"/>

                <com.example.thanyapat.parkinapplication.CircularSeekBar
                    android:id="@+id/circular_seek"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="200dp"
                    android:layout_width="200dp">
                </com.example.thanyapat.parkinapplication.CircularSeekBar>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/review_string"
                        android:hint="Comment here"
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>
                    <Button
                        android:id="@+id/review_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="send"/>
                </LinearLayout>

            </TableLayout>


        </com.example.thanyapat.parkinapplication.CustomScroll>


    </LinearLayout>

    </LinearLayout>