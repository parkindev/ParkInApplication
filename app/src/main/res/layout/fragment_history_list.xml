<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:name="com.example.thanyapat.parkinapplication.HistoryFragment"
    tools:context="com.example.thanyapat.parkinapplication.HistoryFragment"
    android:background="#b9b9b9"
    android:orientation="vertical">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="HISTORY"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear_btn"
            android:text="CLEAR"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:duplicateParentState="true"
            android:background="@drawable/edit_button_boarder"
            android:visibility="visible"
            android:layout_gravity="center_vertical|right" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="LinearLayoutManager"
        tools:listitem="@layout/fragment_history"
        android:layout_weight="0.9"/>


</LinearLayout>
