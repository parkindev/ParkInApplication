<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.thanyapat.parkinapplication.IssueReportFragment"
    android:id="@+id/view_issue_report"
    android:orientation="vertical"
    android:background="#b9b9b9">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:layout_weight="0.1"
        android:layout_marginBottom="2dp"
        android:contextClickable="true"
        android:clickable="true"
        android:id="@+id/header_issue_report">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit_btn"
            android:text="SUBMIT"
            android:textSize="20sp"
            android:layout_marginRight="10dp"
            android:duplicateParentState="true"
            android:background="@drawable/edit_button_boarder"
            android:visibility="visible"
            android:layout_gravity="center_vertical|right" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="REPORT"
            android:gravity="center_horizontal"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:id="@+id/label_issue_report" />

    </FrameLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/cv_issue_report"
        card_view:cardCornerRadius="4dp"
        android:layout_weight="0.9"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Issue Type"
                android:id="@+id/textView_type"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_type"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Problems"
                android:id="@+id/textView_problem"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText_problem"
                android:textSize="20sp"
                android:textIsSelectable="false"
                android:maxLines="1"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
